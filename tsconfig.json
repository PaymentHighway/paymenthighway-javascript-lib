{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "js",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "js",
    "node_modules",
    "typings/globals"
  ]
}